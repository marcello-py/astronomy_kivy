ScreenManager:
    FirstScreen:
    LoginScreen:
    RegisterScreen:
    CreatedScreen:
    ResultScreen:

<FirstScreen>:

    name: 'init'
    MDFloatLayout:   
        md_bg_color: '#181717'
        Image:
            source: "image/cat.png"
            size_hint: .90, .70
            pos_hint: {"center_x": .50, "center_y": .6}
            keep_ratio: False

        MDLabel:
            text: "A s t r o n o m y"
            theme_text_color: "Custom"
            text_color: "#FFFFFF"
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .30} 
            halign: "center"
            font_name: "Poppin-Regular.ttf"            

        MDLabel:
            text: "make  login  or  register"
            theme_text_color: "Custom"
            text_color: "#FFFFFF"
            font_size: "15sp"
            pos_hint: {"center_x": .5, "center_y": .25}
            halign: "center"
            font_name: "Poppin-Regular.ttf"            

        MDRoundFlatButton:
            text: "LOGIN"
            size_hint: 0.4, 0.0
            text_color:  "#FFFFFF"
            md_bg_color: "424247"
            font_size: "25sp"
            pos_hint: {"center_x": .5, "center_y": .17}
            line_color_normal: 1, 0, 0, 1
            line_color_down: 0, 1, 0, 1 
            on_press: root.manager.current = 'login'
            font_name: "Poppin-Regular.ttf"

        MDRoundFlatButton:
            text: "S I G N   U P"
            size_hint: 0.4, 0.0
            text_color: "#FFFFFF"
            md_bg_color: "424247"
            font_size: "25sp"
            pos_hint: {"center_x": .5, "center_y": .1}
            halign: "center"
            on_press: root.manager.current = 'register'
            font_name: "Poppin-Regular.ttf" 

<LoginScreen>:
    name: 'login'
    MDFloatLayout:
        md_bg_color: '#525151'
        Image:
            source: "image/moon_bg.png"
            size_hint: 500, 500
            pos_hint: {"center_x": .6, "center_y": .9}
            keep_ratio: False

        MDCard:
            size_hint: None, None
            size: "400dp", "400dp"
            radius: 30
            md_bg_color: '#3C3A3A'
            pos_hint: {"center_x": .5, "center_y": .3}

            BoxLayout:
                orientation: "vertical"
                padding: "20dp"
                spacing: "30dp"
                pos_hint: {"center_x": .3, "center_y": .6}

                MDTextField:
                    id: username_input
                    hint_text: "Name"
                    hint_text_color: 'black'
                    icon_right: "account"
                    line_color_normal: "#FFFFFF"
                    width: "300dp"
                    max_text_length: 30
                    mode: "rectangle"
                    size_hint_x: .9
                    pos_hint: {"center_x": .6}

                MDTextField:
                    id: password_input
                    hint_text: "Password"
                    icon_right: "lock"
                    line_color_normal: "#D0CECE"
                    width: "300dp"
                    max_text_length: 30
                    mode: "rectangle"
                    password: True
                    size_hint_x: .9
                    pos_hint: {"center_x": .6}

                MDRoundFlatButton:
                    text: "acess"
                    font_name: "Poppin-Regular.ttf"
                    text_color: "white"
                    size_hint_x: .9
                    pos_hint: {"center_x": .6, "center_y": .8}
                    md_bg_color: "424247"
                    on_press: root.login_user()

            MDIconButton:
                icon: "chevron-left"     
                icon_size: "30sp"     
                on_press: root.manager.current = 'init'
                md_bg_color: '#3C3A3A'
                pos_hint: {"center_x": .1}




