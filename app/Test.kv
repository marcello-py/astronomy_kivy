ScreenManager:
    FirstScreen:
    LoginScreen:
    Register:
    CreatedLogin:
    LoginSucess:

<FirstScreen>:
    name: 'login'
    MDFloatLayout:        
        Image:
            source: "image/moon_1.jpg"
            allow_stretch: True
            keep_ratio: False

        MDLabel:
            text: "A s t r o n o m y"
            theme_text_color: "Custom"
            text_color: 1, 1, 1
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .30} 
            halign: "center"
            font_name: "Poppin-Regular.ttf"            

        MDLabel:
            text: "make  login  or  register"
            theme_text_color: "Custom"
            text_color: 1, 1, 1
            font_size: "15sp"
            pos_hint: {"center_x": .5, "center_y": .25}
            halign: "center"
            font_name: "Poppin-Regular.ttf"            

        MDRoundFlatButton:
            text: "LOGIN"
            size_hint: 0.4, 0.0
            text_color: "white"
            md_bg_color: "424247"
            font_size: "25sp"
            pos_hint: {"center_x": .5, "center_y": .17}
            line_color_normal: 1, 0, 0, 1
            line_color_down: 0, 1, 0, 1
            on_press: root.manager.current = 'acess'
            font_name: "Poppin-Regular.ttf"

        MDRoundFlatButton:
            text: "S I G N   U P"
            size_hint: 0.4, 0.0
            text_color: "white"
            md_bg_color: "424247"
            font_size: "25sp"
            pos_hint: {"center_x": .5, "center_y": .1}
            halign: "center"
            on_press: root.manager.current = 'cadastro'
            font_name: "Poppin-Regular.ttf" 

<LoginScreen>:
    name: 'acess'
    MDFloatLayout:
#        md_bg_color: "2B3D3C"
        Image:
            source: "image/moon_2.jpg"
            allow_stretch: True
            keep_ratio: False

        MDIconButton:
            icon: "chevron-left"     
            icon_size: "30sp"     
            pos_hint: {"center_x": .1, "center_y": .1}
            on_press: root.manager.current = 'login'
            md_bg_color: 'e9f5f2'

        MDLabel:
            text: "Register"
            theme_text_color: "Custom"
            text_color: 'white'
            font_size: "30sp"
            pos_hint: {"center_x": .5, "center_y": .90} 
            halign: "center"
            font_name: "Poppin-Regular.ttf"            

        MDLabel:
    
            text: "Username"
            theme_text_color: "Custom"
            text_color: 1, 1, 1
            font_size: "40sp"
            pos_hint: {"center_x": .5, "center_y": .50} 
            halign: "center"
            font_name: "Poppin-Regular.ttf"

        MDTextField:
            id: username_input
            hint_text: "Name"
            mode: "round"
            size_hint_x: .4
            size_hint_y: None
            max_text_length: 30
            pos_hint: {"center_x": .5, "center_y": .40}
 
        MDLabel:
            text: "Password"
            theme_text_color: "Custom"
            text_color: 1, 1, 1
            font_size: "40sp"
            pos_hint: {"center_x": .5, "center_y": .30} 
            halign: "center"
            font_name: "Poppin-Regular.ttf"

        MDTextField:
            id: password_input
            hint_text: "Password"
            mode: "round"
            size_hint_x: .4
            max_text_length: 10
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .25}

        MDRoundFlatButton:
            text: "acess"
            font_name: "Poppin-Regular.ttf"
            text_color: "white"
            size_hint_x: .4
            pos_hint: {"center_x": .5, "center_y": .10}
            md_bg_color: "424247"
            on_press: root.login_user()

