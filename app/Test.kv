<ResultScreen>:
    name: 'suced'
    MDFloatLayout:         
        Image: 
            source: "image/crow.jpg"
            allow_stretch: True
            keep_ratio: False
 
        MDLabel:
            text: "A s t r o n o m y"
            theme_text_color: "Custom"
